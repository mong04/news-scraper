<div class="row news-row">
    {{#if data}}
        {{#each data}}
            <div class="news col s12 m6">
                <div class="card grey lighten-5 horizontal center-align hoverable">
                    <div class="card-stacked">          
                    <div class="card-content">              
                        <p class="flow-text">{{this.title}}</p>
                        <p class="hide-on-small-only">{{this.description}}</p> 
                    </div>
                    <div class="card-action">
                        <div class="row">
                            <div class="col s6">
                                <button type="button" 
                                    id="save-button" 
                                    class="{{#if this.saved}}
                                        cyan darken-1
                                    {{else}}
                                        grey darken-1
                                    {{/if}} btn waves-light" 
                                    value="{{this._id}}">
                                    {{#if this.saved}}
                                        Saved
                                    {{else}}
                                        Save
                                    {{/if}}
                                </button>
                            </div>
                            <div class="col s6">
                                <a href="{{this.link}}" target="_blank" class="grey darken-1 btn waves-light" href="{{this.link}}">Read</a>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        {{/each}}
        {{else}}
        <h2 class="grey-text text-darken-4">There's nothing to show yet...
            Do some scraping and try again!
        </h2>
    {{/if}}
</div>
