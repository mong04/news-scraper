<div class="row news-row">
    {{#if data}}
        {{#each data}}
            <div class="col s12 m6">
                <div id="card-block" class="card center news grey lighten-5">
                    <div class="card-content">
                        <span class="card-title">{{this.title}}</span>
                        <p class="hide-on-small-only grey-text text-darken-4">{{this.description}}</p>
                    </div>
                    <div class="row">
                        <div class="col s6">
                            <form action="/{{this._id}}?_method=DELETE" id="notes" method="POST">
                                <button type="submit" class="grey darken-1 btn waves-light">Notes</button>
                            </form>
                        </div>
                        <div class="col s6">
                            <form action="/{{this._id}}?_method=DELETE" id="delete" method="POST">
                                <button type="submit" class="grey darken-1 btn waves-light">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
        {{else}}
        <h2 class="grey-text text-darken-4">There's nothing to show yet...
            Do some scraping and try again!
        </h2>
    {{/if}}
</div>